{
  "manifest_version": 3,
  "name": "AI Suffix Extension",
  "version": "1.0.0",
  "description": "Automatically adds '-ai' to your address bar searches.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "AI Suffix Extension",
    "default_popup": "main_popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}